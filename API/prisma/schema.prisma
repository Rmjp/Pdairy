generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model BreedingRecord {
  ID         Int      @id @default(autoincrement())
  date       DateTime @db.Timestamptz(0)
  fatherName String
  timestamp  DateTime @db.Timestamptz(0)
  calfGender String
  calfWeight Float
  motherID   Int?
  Cow        Cow?     @relation(fields: [motherID], references: [ID])
}

model Cow {
  ID             Int              @id @default(autoincrement())
  name           String
  genetic        String?
  birthDate      DateTime         @db.Timestamptz(0)
  weightAtBirth  Float
  fatherName     String?
  fatherGenetic  String?
  motherName     String?
  motherGenetic  String?
  farmID         Int
  breedingRecord BreedingRecord[]
  prediction     Json?
  farm           Farm             @relation(fields: [farmID], references: [ID])
  milkRecord     MilkRecord[]
}

model Farm {
  ID    Int    @id @default(autoincrement())
  name  String
  owner String
  Cow   Cow[]
}

model MilkRecord {
  ID        Int      @id @default(autoincrement())
  timestamp DateTime @db.Timestamptz(0)
  weight    Float
  cowID     Int
  Cow       Cow      @relation(fields: [cowID], references: [ID])
}
